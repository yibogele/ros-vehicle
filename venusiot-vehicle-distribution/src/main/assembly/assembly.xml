<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>iot</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>src/main/resources/placeholder</source>
			<outputDirectory>venusiot-vehicle-${project.version}/logs</outputDirectory>
		</file>
		<file>
			<source>src/main/scripts/startup.sh</source>
			<outputDirectory>venusiot-vehicle-${project.version}/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/scripts/stop.sh</source>
			<outputDirectory>venusiot-vehicle-${project.version}/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/scripts/run.sh</source>
			<outputDirectory>venusiot-vehicle-${project.version}/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<!--<file>-->
			<!--<source>src/main/resources/logback-test.xml</source>-->
			<!--<outputDirectory>venusiot-vehicle-${project.version}/config/</outputDirectory>-->
		<!--</file>-->
		<file>
			<source>src/main/resources/vehicle.conf</source>
			<outputDirectory>venusiot-vehicle-${project.version}/config/</outputDirectory>
		</file>
		<!--<file>-->
			<!--<source>src/main/resources/my.properties</source>-->
			<!--<outputDirectory>venusiot-vehicle-${project.version}/config/</outputDirectory>-->
		<!--</file>-->

	</files>

	<dependencySets>
		<dependencySet>
			<outputDirectory>venusiot-vehicle-${project.version}/lib/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>
